@using ContactController.DBContext;
  
@model List<Contact>
@{
    ViewData["Title"] = "Lista de Contatos";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a role="button" class="btn btn-success" asp-controller="Contato" asp-action="Criar">Adicionar novo contato!</a>
    </div>
    <br/>
    <h1 class="display-4">Lista de Contatos</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">E-Mail</th>
                <th scope="col">Contato</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            
            @if(Model != null && Model.Any())
                {
                    foreach(Contact contato in Model)
                    {
                        <tr>
                            <th scope="row">@contato.Id</th>
                            <td>@contato.Name</td>
                            <td>@contato.Email</td>
                            <td>@contato.Contato</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar" role="button" class="btn btn-primary">Editar</a>
                                    <a asp-route-id="@contato.Id" asp-controller="Contato" asp-action="ApagarConfirmacao" role="button" class="btn btn-danger">Apagar</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            
        </tbody>
    </table>
</div>

