@using ContactController.DBContext;
@model Contact
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">


    <h1 class="display-4">Editar Contato</h1>

</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do contato" />
    </div>
    <div class="form-group">
        <label for="email" class="form-label">Email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Digite o e-mail do contato" />
    </div>
    <div class="form-group">
        <label for="contato" class="form-label">Contato</label>
        <input type="text" asp-for="Contato" class="form-control" placeholder="Digite o numero do contato" />
    </div>

    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="Contato" role="button">Voltar</a>
</form>
