@using ContactController.DBContext;
@model Contact
@{
    ViewData["Title"] = "Apagar Contato";
}

<div class="text-center">


    <h1 class="display-4">Apagar Contato</h1>

</div>

<p>Tem certeza que deseja apagar o contato: (@Model.Name) ?</p>

    <div class="d-grid gap-2">
        <a class="btn btn-danger btn-block" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id" role="button">Apagar</a>
        <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
    </div>
